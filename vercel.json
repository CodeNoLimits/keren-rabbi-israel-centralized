{
  "version": 2,
  "public": true,
  "buildCommand": "npm run build:client",
  "outputDirectory": "dist/public",
  "framework": null,
  "installCommand": "npm install",
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" },
      "continue": true
    },
    {
      "src": "/images/(.*)",
      "headers": { "Cache-Control": "public, max-age=86400" },
      "continue": true
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
